{
  "name": "aidos-universal",
  "description": "Angular Universal App for Aidos",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/wwelling/aidos-universal.git"
  },
  "contributors": [
    "William Welling <wwelling@outlook.com>"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "preinstall": "npm install --global npm-check-updates rimraf webpack nodemon pm2 rollup typedoc",
    "lint": "tslint \"src/**/*.ts\"",
    "start": "npm run build:prod && npm run server",
    "start:dev": "npm run build && npm run server",
    "deploy": "pm2 start dist/server.js",
    "predeploy": "npm run build:prod",
    "preundeploy": "pm2 stop dist/server.js",
    "undeploy": "pm2 delete dist/server.js",
    "postundeploy": "npm run clean:dist",
    "build": "webpack",
    "build:aot": "webpack --env.aot --env.server && webpack --env.aot --env.client",
    "build:prod": "webpack --env.aot --env.server -p && webpack --env.aot --env.client -p",
    "prebuild": "npm run clean:dist",
    "prebuild:aot": "npm run clean:dist",
    "prebuild:prod": "npm run clean:dist",
    "postbuild:prod": "npm run rollup",
    "rollup": "rollup -c rollup.config.js",
    "clean": "npm run clean:dist && npm run clean:npm",
    "clean:dist": "rimraf dist",
    "clean:npm": "rimraf \"node_modules/!(rimraf|.bin)\"",
    "server": "node dist/server.js",
    "server:watch": "nodemon dist/server.js",
    "server:watch:debug": "nodemon --debug dist/server.js",
    "watch": "npm run build && concurrently \"webpack -w\"  \"npm run server:watch\"",
    "watch:debug": "npm run build && concurrently \"webpack -w\" \"npm run server:watch:debug\"",
    "watch:aot": "npm run build:aot && concurrently \"webpack --env.aot --env.server && webpack --env.aot --env.client\" \"npm run server:watch\"",
    "watch:prod": "npm run build:prod && concurrently \"webpack --env.aot --env.server && webpack --env.aot --env.client\" \"npm run server:watch\""
  },
  "dependencies": {
    "@angular/animations": "4.0.1",
    "@angular/common": "4.0.1",
    "@angular/compiler": "4.0.1",
    "@angular/core": "4.0.1",
    "@angular/forms": "4.0.1",
    "@angular/http": "4.0.1",
    "@angular/platform-browser": "4.0.1",
    "@angular/platform-browser-dynamic": "4.0.1",
    "@angular/platform-server": "4.0.1",
    "@angular/router": "4.0.1",
    "@ng-bootstrap/ng-bootstrap": "1.0.0-alpha.22",
    "@ngrx/core": "1.2.0",
    "@ngrx/effects": "2.0.2",
    "@ngrx/router-store": "1.2.5",
    "@ngrx/store": "2.2.1",
    "@ngx-translate/core": "6.0.1",
    "@ngx-translate/http-loader": "0.0.3",
    "bootstrap": "4.0.0-alpha.6",
    "compression": "1.6.2",
    "express": "4.15.2",
    "express-session": "1.15.2",
    "font-awesome": "4.7.0",
    "https": "1.0.0",
    "immutable": "3.8.1",
    "morgan": "1.8.1",
    "pem": "1.9.4",
    "rxjs": "5.3.0",

    "xhr2": "0.1.4",
    "zone.js": "0.8.5"
  },
  "devDependencies": {
    "@angular/compiler-cli": "4.0.1",
    "@ngrx/store-devtools": "3.2.4",
    "@ngtools/webpack": "1.3.0",
    "@types/express": "4.0.35",
    "@types/node": "7.0.12",
    "codelyzer": "3.0.0-beta.4",
    "concurrently": "3.4.0",
    "copy-webpack-plugin": "4.0.1",
    "html-webpack-plugin": "2.28.0",
    "node-sass": "4.5.2",
    "nodemon": "1.11.0",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.1",
    "rollup": "0.41.6",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-node-globals": "1.1.0",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-uglify": "1.0.1",
    "sass-loader": "6.0.3",
    "script-ext-html-webpack-plugin": "1.7.1",
    "tslint": "4.5.1",
    "tslint-loader": "3.4.3",
    "typedoc": "0.5.10",
    "typescript": "2.2.2",
    "webpack": "2.3.3",
    "webpack-merge": "4.1.0"
  }
}
